<div id="top-bar">
	<a href="/"><img id="top-bar-icon" src="/img/title.png"></a>
    <h4 id="login-as">Logged in as:  <a href="/users/<%= current_user.id %>"><%= current_user.username %></a></h4>
	<a id="signoutbutton" href="/logout">Sign Out</a>
	<a id="home" href="/">Home</a>
</div>

<div id="profile-container">
	<img id="profile-img" src="/img/blank-profile.png">
	<p>Username: <%= @user.username %></p>
	<p>Email: <%= @user.email %></p>
	<hr>

	<% if @user.questions != [] %>
		<h3><a href="/users/<%= @user.id %>/questions">Click here to view questions!</a></h3>
	<% elsif @user.questions == [] %>
		<h3>No questions asked yet!</h3>
	<% end %>

	<% if @user.answers != [] %>
		<h3><a href="/users/<%= @user.id %>/answers">Click here to view answers!</a></h3>
	<% elsif @user.answers == [] %>
		<h3>No answers posted yet!</h3>
	<% end %>
</div>

<div id="question-input-container">
	<h3>Have something to ask?</h3>
	<hr>
	<% if current_user.id == @user.id %>
		<br>
		<form id="question-input-box" method="post" action="/question">
		    <input id="question-title-input" type=text placeholder="Title" name="user_title"><br>
		    <textarea id="question-content-input" rows="15" cols="51" placeholder="Question goes here!" name="user_description" wrap="soft"></textarea>
		  	<br>
		    <input id="question-submit-button" class="buttoneffect" type=submit value="Ask!">
		</form>
	<% else %>
		<h3>Return to your <a href="/users/<%= current_user.id %>">profile</a> and begin asking!</h3>
		
	<% end %>
</div>


